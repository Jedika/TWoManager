{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noEmit": false,
    "allowJs": true,
    "strict": false,
    "removeComments": true,
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "declaration": true,
    "paths": {
      "*.ts": ["*"]
    }
  },
  "exclude": ["src-electron/main-process/child"]
}
