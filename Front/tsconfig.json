{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noEmit": false,
    "allowJs": true,
    "strict": false,
    "removeComments": true,
    "target": "ESNext",
    "module": "commonjs",
    // "typeRoots": ["node_modules/@types", "src"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "declaration": true
    // "rootDir": "src",
    // "outDir": "dist"
  }
}
